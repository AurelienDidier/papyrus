		<module>rcp/org.eclipse.papyrus.rcp.feature</module>
		<module>rcp/org.eclipse.papyrus.rcp.product</module>
	</modules>
	<properties>
		<tycho-version>0.21.0</tycho-version>
		<tychoExtrasVersion>0.21.0</tychoExtrasVersion>
	</properties>
