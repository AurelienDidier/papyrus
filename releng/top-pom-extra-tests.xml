  <properties>
		<tycho-version>0.20.0</tycho-version>
		<tychoExtrasVersion>0.20.0</tychoExtrasVersion>
	</properties>
	<repositories>
		<repository>
			<id>papyrus-main</id>
			<layout>p2</layout>
			<url>${papyrus.repo.main}</url>
		</repository>
		<repository>
			<id>papyrus-extra</id>
			<layout>p2</layout>
			<url>${papyrus.repo.extra}</url>
		</repository>
		<repository>
			<id>birt</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/birt/update-site/4.4/</url>
		</repository>
		<repository>
			<id>cdt</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/tools/cdt/builds/luna/milestones</url>
		</repository>
		<repository>
			<id>emf</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/modeling/emf/updates/</url>
