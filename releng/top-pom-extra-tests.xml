		</repository>
		<repository>
			<id>emft-mwe</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/modeling/emft/mwe/updates/releases/R201405200714/mwe</url>
		</repository>
		<repository>
			<id>emf-transaction</id>
