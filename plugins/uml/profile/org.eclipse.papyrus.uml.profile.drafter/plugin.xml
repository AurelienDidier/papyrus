<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.eclipse.papyrus.uml.profile.drafter.createprofile"
            name="Create Profile">
      </command>
      <command
            id="org.eclipse.papyrus.uml.profile.drafter.addprofile"
            name="Add Profile">
      </command>
      <command
            id="org.eclipse.papyrus.uml.profile.drafter.checkselection"
            name="Check Selection Type">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.papyrus.uml.profile.drafter.ui.handler.CreateProfileHandler"
            commandId="org.eclipse.papyrus.uml.profile.drafter.createprofile">
      </handler>
      <handler
            class="org.eclipse.papyrus.uml.profile.drafter.ui.handler.AddProfileHandler"
            commandId="org.eclipse.papyrus.uml.profile.drafter.addprofile">
      </handler>
      <handler
            class="org.eclipse.papyrus.uml.profile.drafter.ui.handler.CheckSelectionHandler"
            commandId="org.eclipse.papyrus.uml.profile.drafter.checkselection">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.papyrus.layers.stackmodel.diagram.ui.contextmenu">
         <menu
               id="org.eclipse.papyrus.uml.profile.drafter.ui.contextmenu"
               label="Profiles">
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.createprofile"
                  icon="icons/createStereotype.gif"
                  label="Create a new Stereotype"
                  style="push"
                  tooltip="Create a Stereotype in selected element">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.papyrus.ui.menu">
         <menu
               label="Profiles ...">
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.addprofile"
                  label="Add Profile"
                  style="push"
                  tooltip="Add a UML Profile to selected element">
            </command>
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.createprofile"
                  label="Create Profile"
                  style="push"
                  tooltip="Create a UML Profile to selected element">
            </command>
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.checkselection"
                  label="Check Selection Type"
                  style="push"
                  tooltip="Print Selection Type in Console">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.gmf.runtime.diagram.ui.DiagramEditorContextMenu">
         <menu
               label="Profiles ...">
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.addprofile"
                  label="Add Profile"
                  style="push"
                  tooltip="Add a UML Profile to selected element">
            </command>
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.createprofile"
                  label="Create Profile"
                  style="push"
                  tooltip="Create a UML Profile to selected element">
            </command>
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.checkselection"
                  label="Check Selection Type"
                  style="push"
                  tooltip="Print Selection Type in Console">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.papyrus.views.modelexplorer.modelexplorer.popup">
         <menu
               id="org.eclipse.papyrus.uml.profile.drafter.contextmenu"
               label="Profiles ...">
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.addprofile"
                  label="Add Profile"
                  style="push"
                  tooltip="Add a UML Profile to selected element">
            </command>
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.createprofile"
                  label="Create Profile"
                  style="push"
                  tooltip="Create a UML Profile to selected element">
            </command>
            <command
                  commandId="org.eclipse.papyrus.uml.profile.drafter.checkselection"
                  label="Check Selection Type"
                  style="push"
                  tooltip="Print Selection Type in Console">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
