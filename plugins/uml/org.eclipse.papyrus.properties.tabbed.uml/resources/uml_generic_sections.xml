<!--UML Basic properties view-->
<propertyTabView pluginId="org.eclipse.papyrus.properties.tabbed.uml">
	<!--  tab descriptors definition -->
	<tab label="UML" category="UML" id="basicTab"/>
	<tab label="Advanced" category="UML" id="advancedTab"/>
	
	<!-- section description -->
	<sectionSet name="Section Set for single NameElement">
		<context enablesFor="1">
			<elementClass name="org.eclipse.uml2.uml.NamedElement"/>
		</context>
		<section id="namedElementSection" tabId="basicTab" adapterId="Semantic">
			<replacedSections>
				<replacedSection id="multipleNamedElementsSection"/> 
			</replacedSections>
			<fragment predefinedId="fragment_single_NamedElement"/>
		</section>
	</sectionSet>
	<sectionSet name="Section Set for multiple NameElements">
		<context enablesFor="-1">
			<elementClass name="org.eclipse.uml2.uml.NamedElement"/>
		</context>
		<section id="multipleNamedElementsSection" tabId="basicTab" adapterId="Semantic">
			<fragment predefinedId="fragment_multi_NamedElement"/>
		</section>
	</sectionSet>
	<sectionSet name="Section Set for single Class">
		<context enablesFor="1">
			<elementClass name="org.eclipse.uml2.uml.Class"/>
		</context>
		<section id="singleClassifierSection" tabId="basicTab" adapterId="Semantic">
			<fragment id="fragment_single_Classifier2">	<!-- fragment for UML Classifier -->
				<context enablesFor="1">
					<elementClass name="org.eclipse.uml2.uml.Classifier"></elementClass>
				</context>
				<content>
					<container layout="Grid" columns="2" sameSize="false">
						 <controller predefinedId="UML_Classifier_isAbstract"/>
					</container>
					<expandableContainer label="Features" layout="Grid" columns="2" sameSize="false">
						<controller id="emftLabelProviderStructuralFeatureController">
							<feature name="ownedAttribute" handlerID="Reference"/>
							<editor id="org.eclipse.papyrus.properties.runtime.multipleStructuralFeaturesPropertyEditor" label="Attributes:" labelPosition="16384">
							</editor>
						</controller>
						<controller id="emftLabelProviderStructuralFeatureController">
							<feature name="ownedOperation" handlerID="Reference"/>
							<editor id="org.eclipse.papyrus.properties.runtime.multipleStructuralFeaturesPropertyEditor" label="Operations:" labelPosition="16384">
							</editor>
						</controller>
					</expandableContainer>
					<groupContainer label="MyGroup" layout="Grid" columns="1" sameSize="false">
						<controller id="emftStructuralFeatureController">
							<feature name="qualifiedName" handlerID="String"/>
							<editor id="org.eclipse.papyrus.properties.runtime.textPropertyEditor" label="Qualified Name:" labelPosition="16384">
								<icon pluginID="org.eclipse.papyrus.properties.tabbed.uml" path="/icons/tool.gif"/>
							</editor>
						</controller>
					</groupContainer>
				</content>
			</fragment>
		</section>
	</sectionSet>
	<sectionSet name="Section Set for single Property">
		<context enablesFor="1">
			<elementClass name="org.eclipse.uml2.uml.Property"/>
		</context>
		<section id="singlePropertySection" tabId="basicTab" adapterId="Semantic">
			<fragment predefinedId="fragment_single_Property"/>
		</section>
	</sectionSet>
	<sectionSet name="Section Set for single Association">
		<context enablesFor="1">
			<elementClass name="org.eclipse.uml2.uml.Association"/>
		</context>
		<subFeatureSection id="associationEndSection" tabId="basicTab" adapterId="Semantic" maxColumn="2">
			<subFeatureDescriptor featureName="memberEnd">
			</subFeatureDescriptor>
			<subFeatureDescriptorContainer type="expandableContainer" label="member ends"/>
			<fragment id="fragment_single_MemberEnd">	<!-- fragment for UML Property as a member end -->
				<context enablesFor="1">
					<elementClass name="org.eclipse.uml2.uml.Property"></elementClass>
				</context>
				<content>
					<groupContainer label="" layout="Grid" columns="1" sameSize="false">
						 <controller predefinedId="UML_NamedElement_name"/>
						 <controller id="emftBindingReferenceController">
							<feature name="type" handlerID="Reference"/>
							<binding message="{0} - ({1})">
								<feature name="name"/>
								<feature name="qualifiedName"/>
							</binding>
							<editor id="org.eclipse.papyrus.properties.runtime.simpleReferencePropertyEditor" label="Type:" labelPosition="16384">
								<icon pluginID="org.eclipse.papyrus.properties.tabbed.uml" path="/icons/type.gif"/>
							</editor>
						</controller>
						<controller predefinedId="UML_Property_aggregation"/>
						<controller id="emftStructuralFeatureController">
							<feature handlerID="Multiplicity">
								<availableValue value="0..1"/>
								<availableValue value="1..1"/>
								<availableValue value="0..*"/>
								<availableValue value="1..*"/>
							</feature>
							<editor id="org.eclipse.papyrus.properties.runtime.uml.multiplicityPropertyEditor" label="Multiplicity:" labelPosition="16384"/>
						</controller>
					</groupContainer>
				</content>
			</fragment>
		</subFeatureSection>
	</sectionSet>
	<sectionSet name="Section Set for single Class stereotyped EClass">
		<context enablesFor="1">
			<elementClass name="org.eclipse.uml2.uml.Class"/>
			<appliedStereotypes>
				<appliedStereotype qualifiedName="Ecore::EClass"/>
			</appliedStereotypes>
		</context>
		<section id="singleClass_EClassSection" tabId="basicTab" adapterId="Semantic">
			<replacedSections>
				<replacedSection id="singleClassifierSection"/> 
			</replacedSections>
			<fragment id="fragment_single_Class_Eclass">	<!-- fragment for UML Classifier -->
				<context enablesFor="1">
					<elementClass name="org.eclipse.uml2.uml.Class"></elementClass>
				</context>
				<content>
					<expandableContainer label="EClass" layout="Grid" columns="1" sameSize="false">
						<controller id="emftStructuralFeatureController">
							<feature stereotypeName="Ecore::EClass" name="className" handlerID="StringStereotype"/>
							<editor id="org.eclipse.papyrus.properties.runtime.textPropertyEditor" label="Class Name:" labelPosition="16384">
							</editor>
						</controller>
						<controller id="emftStructuralFeatureController">
							<feature stereotypeName="Ecore::EClass" name="xmlContentKind" handlerID="EnumerationStereotype"/>
							<editor id="org.eclipse.papyrus.properties.runtime.radioBoxPropertyEditor" label="XML Content kind:" labelPosition="16384">
							</editor>
						</controller>
					</expandableContainer>
				</content>
			</fragment>
		</section>
	</sectionSet>
	<sectionSet name="Section Set for single Property stereotyped EAttribute">
		<context enablesFor="1">
			<elementClass name="org.eclipse.uml2.uml.Property"/>
			<appliedStereotypes>
				<appliedStereotype qualifiedName="Ecore::EAttribute"/>
			</appliedStereotypes>
		</context>
		<section id="singleProperty_EAttributeSection" tabId="basicTab" adapterId="Semantic">
			<replacedSections>
				<replacedSection id="singlePropertySection"/> 
			</replacedSections>
			<fragment id="fragment_single_Property_EAttribute">	<!-- fragment for UML Property with stereotype Ecore::EAttribute -->
				<context enablesFor="1">
					<elementClass name="org.eclipse.uml2.uml.Property"></elementClass>
				</context>
				<content>
					<expandableContainer label="EAttribute" layout="Grid" columns="1" sameSize="false">
						<controller id="emftStructuralFeatureController">
							<feature stereotypeName="Ecore::EAttribute" name="isTransient" handlerID="BooleanStereotype"/>
							<editor id="org.eclipse.papyrus.properties.runtime.comboPropertyEditor" label="Transient:" labelPosition="16384">
							</editor>
						</controller>
					</expandableContainer>
				</content>
			</fragment>
		</section>
	</sectionSet>
	<sectionSet name="Section Set for single Property stereotyped SysML::Blocks::ConnectorProperty">
		<context enablesFor="1">
			<elementClass name="org.eclipse.uml2.uml.Property"/>
			<appliedStereotypes>
				<appliedStereotype qualifiedName="SysML::Blocks::ConnectorProperty"/>
			</appliedStereotypes>
		</context>
		<section id="singleProperty_ConnectorProperty" tabId="basicTab" adapterId="Semantic">
			<replacedSections>
				<replacedSection id="singlePropertySection"/> 
			</replacedSections>
			<fragment id="fragment_single_Property_ConnectorProperty">	<!-- fragment for UML Property with stereotype SysML::Blocks::ConnectorProperty -->
				<context enablesFor="1">
					<elementClass name="org.eclipse.uml2.uml.Property"></elementClass>
				</context>
				<content>
					<expandableContainer label="SysML" layout="Grid" columns="1" sameSize="false">
						<controller id="emftBindingReferenceController">
							<binding message="{0} - ({1})">
								<feature name="name"/>
								<feature name="qualifiedName"/>
							</binding>
							<feature stereotypeName="SysML::Blocks::ConnectorProperty" name="connector" handlerID="ReferenceStereotype"/>
							<editor id="org.eclipse.papyrus.properties.runtime.simpleReferencePropertyEditor" label="Connector:" labelPosition="16384">
							</editor>
						</controller>
					</expandableContainer>
				</content>
			</fragment>
		</section>
	</sectionSet>
</propertyTabView>
