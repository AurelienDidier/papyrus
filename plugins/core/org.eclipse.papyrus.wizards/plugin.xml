<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <extension-point id="templates" name="UML2 Model Templates" schema="schema/templates.exsd"/>
	<extension point="org.eclipse.ui.newWizards">
		<category 
			id="org.eclipse.papyrus.wizards.category"
    		name="Papyrus">
		</category>
		<wizard
    		category="org.eclipse.papyrus.wizards.category"
    		class="org.eclipse.papyrus.wizards.CreateModelWizard"
    		finalPerspective="org.eclipse.papyrus.core.perspective"
    		icon="icons/papyrus/Papyrus_16x16.gif"
    		id="org.eclipse.papyrus.wizards.createmodel"
    		name="Create a new model">
 			<selection class="org.eclipse.core.resources.IResource" />
		</wizard>
	</extension>
	
	<extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.eclipse.papyrus.wizards.InitDiagram"
            nameFilter="*.uml"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               label="Initialize Papyrus Diagram"
               class="org.eclipse.papyrus.wizards.InitDiagramAction"
               menubarPath="additions"
               enablesFor="1"
               id="org.eclipse.papyrus.wizards.InitDiagramAction">
         </action>
      </objectContribution>
   </extension>
   
</plugin>
