<plugin>
   <extension-point id="syncDelegates" name="Synchronization Service Delegates" schema="schema/syncDelegates.exsd"/>
   <extension
         point="org.eclipse.papyrus.infra.core.service">
      <service
            classname="org.eclipse.papyrus.sync.internal.SyncServiceImpl"
            description="Generic model synchronization service"
            id="org.eclipse.papyrus.sync.ISyncService"
            priority="10"
            startKind="startup">
         <dependsOn
               serviceKeyRef="org.eclipse.papyrus.infra.core.resource.ModelSet">
         </dependsOn>
      </service>
   </extension>
   <extension
         point="org.eclipse.papyrus.infra.core.model">
      <model
            classname="org.eclipse.papyrus.sync.internal.SyncMappingModel"
            description="Synchronization mappings model"
            fileExtension="syncmapping">
      </model>
   </extension>

</plugin>
