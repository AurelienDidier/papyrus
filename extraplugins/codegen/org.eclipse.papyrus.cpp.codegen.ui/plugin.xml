<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.papyrus.views.modelexplorer.modelexplorer.popup">
          <command
               commandId="org.eclipse.papyrus.cpp.codegen.command"
               icon="icons/codegen.gif"
               label="Generate C++ code"
               style="push"
               tooltip="Generate C++ code">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.gmf.runtime.diagram.ui.DiagramEditorContextMenu">
          <command
               commandId="org.eclipse.papyrus.cpp.codegen.command"
               icon="icons/codegen.gif"
               label="Generate C++ code"
               style="push"
               tooltip="Generate C++ code">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Generate C++ code"
            id="org.eclipse.papyrus.cpp.codegen.command"
            defaultHandler="org.eclipse.papyrus.cpp.codegen.ui.handler.GenerateCodeHandler"
            name="Generate C++ code">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.papyrus.infra.core.sasheditor.preferences.generalcategory"
            class="org.eclipse.papyrus.cpp.codegen.ui.preferences.CodegenPreferencePage"
            id="org.eclipse.papyrus.cpp.codegen.ui.preferences.CodeGenPreferencePage"
            name="C++ code generation"/>
   </extension>
</plugin>
